# Commented out IPython magic to ensure Python compatibility.
# %matplotlib inline
import pandas as pd
import matplotlib as mpl
import matplotlib.pyplot as plt

df = pd.read_csv('data1.csv')
df

df = df.T
df

data_df = df.loc[['년월', '반도체(억불)', '메모리(억불)', '시스템_반도체(억불)']]
data_df

data_df = data_df.T
data_df

data_df.columns = ['year_month', 'semiconductor', 'memory_semiconductor', 'system_semiconductor' ]

# Commented out IPython magic to ensure Python compatibility.
# %matplotlib inline

data_df.plot(x='year_month')
plt.title('Semiconductor exports')
plt.ylabel('a hundred million dollars')
