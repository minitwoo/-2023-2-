# %matplotlib inline
import pandas as pd
import matplotlib as mpl
import matplotlib.pyplot as plt

df = pd.read_csv('data2.csv', encoding='euc-kr')

data_df = df.loc[[0]]
data_df = data_df.T

data_df = data_df.drop(['종사자규모별(1)', '사례수 (개)'])
data_df

!sudo apt-get install -y fonts-nanum
!sudo fc-cache -fv
!rm ~/.cache/matplotlib -rf

import matplotlib.pyplot as plt

plt.rc('font', family='NanumBarunGothic')

def customPct(pct):
    return('%.1f%%' % pct) if pct >= 5 else ' '

plt.pie(data_df[0], autopct=customPct)
plt.title('인공지능 제품 서비스의 응용 산업 분야')
plt.legend(data_df.index, loc=(1.2, 0.25))
plt.show()
